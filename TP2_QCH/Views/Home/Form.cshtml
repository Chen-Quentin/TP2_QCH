@model TP2_QCH.Models.FormModel

<!DOCTYPE html>

<html>

    <head>
        <title>HN - Form</title>
        <link rel="stylesheet" href="~/resources/Form.css" />
    </head>

    <body>
        <header>
            <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
            <h1>Formulaire</h1>
        </header>

        <nav>
            <ul>
                <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/ListPage">Liste des avis</a></li>
            </ul>
        </nav>
        <section>
        <form action="/Home/ValidateForm">
            <table>
                <tr>
                    <th colspan="2">Informations Personnelles</th>
                </tr>
                <tr>
                    <td>Nom</td>
                    <td><input type="text" asp-for="Name" /><span asp-validation-for="Name" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td>Prénom</td>
                    <td><input type="text" asp-for="FName" /><span asp-validation-for="FName" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td>Sexe</td>
                    <td>
                        <select asp-for="Gender">
                            <option value="Sélectionner un Sexe">Sélectionner un Sexe</option>
                        <option value="Homme">Homme</option>
                        <option value="Femme">Femme</option>
                        <option value="Autre">Autre</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td><input type="text" asp-for="Address" /><span asp-validation-for="Address" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td>Code Postal</td>
                    <td><input type="text" asp-for="ZCode" oninput="this.value=this.value.replace(/[^0-9]/g,'')" maxlength="5"><span asp-validation-for="ZCode" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td><input type="text" asp-for="Town"><span asp-validation-for="Town" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td>Adresse Email</td>
                    <td><input type="text" asp-for="Email"><span asp-validation-for="Email" class="text-danger"></span></td>
                </tr>
            </table>
            <table>
                <tr>
                    <th colspan="2">Informations sur la Formation</th>
                </tr>
                <tr>
                    <td>Début de Formation</td>
                    <td><input type="date" asp-for="SDate" /><span asp-validation-for="SDate" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td>Formation Suivie</td>
                    <td>
                        <select asp-for="TType">
                            <option value="Sélectionner une Formation">Sélectionner une Formation</option>
                            <option value="Formation Cobol">Formation Cobol</option>
                            <option value="Formation Objet">Formation Objet</option>
                            <option value="Formation Double Compétence">Formation Double Compétence</option>
                        </select>
                        <span asp-validation-for="TType" class="text-danger"></span>
                    </td>
                </tr>
            </table>
            <table>
                <tr>
                    <th colspan="2">Avis sur la Formation Suivie</th>
                </tr>
                <tr>
                    <td>Formation Cobol</td>
                    <td><input type="text" name="cobolf"/></td>
                </tr>
                <tr>
                    <td>Formation C#</td>
                    <td><input type="text" name="csharf"/></td>
                </tr>
            </table>
            <button type="submit">Valider</button>
            </form>
        </section>
    </body>

</html>
